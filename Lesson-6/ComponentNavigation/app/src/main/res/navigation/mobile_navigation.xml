<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="ru.geekbrains.componentnavigation.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_sub_navigation"
            app:destination="@id/sub_navigation" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="ru.geekbrains.componentnavigation.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="ru.geekbrains.componentnavigation.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <include app:graph="@navigation/sub_navigation" />

    <fragment
        android:id="@+id/sub_settings"
        android:name="ru.geekbrains.componentnavigation.ui.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" >
    </fragment>

    <action android:id="@+id/action_global_settings"
        app:destination="@id/sub_settings"/>

</navigation>